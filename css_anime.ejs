<style data-link="animistanet">
  .HORIZONTAL_FLIP {
    animation: flip-horizontal-bottom 0.4s cubic-bezier(0.455, 0.030, 0.515, 0.955) infinite;
    width: 50px; height: 50px; background-color: rgb(153, 18, 18);
  }
  @keyframes flip-horizontal-bottom {
    0% {
      transform: rotateX(0);
    }
    100% {
      transform: rotateX(-180deg);
    }
  }

  .CLICK {
    animation: CLICK 0.6s ease-out both;
    width: 50px; height: 50px; background-color: rgb(109, 37, 37);
  }
  @keyframes CLICK {
    0% {
      transform: rotate(-540deg) scale(0);
      opacity: 0;
    }
    100% {
      transform: rotate(0) scale(1);
      opacity: 1;
    }
  }
</style>

<body>
  <div class="HORIZONTAL_FLIP"></div>

  <div class="CLICK  "></div>
</body>

<script>
  void document.querySelector('.CLICK').addEventListener('click', function() {
    this.classList.remove('CLICK');
    this.offsetWidth
    this.classList.add('CLICK');
  })
</script>